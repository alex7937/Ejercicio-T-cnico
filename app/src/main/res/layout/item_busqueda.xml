<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#FFFFF0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/B_IB1"
                android:layout_width="100dp"
                android:layout_height="170dp"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/B_Cancion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Cancion: "
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:background="#FFD700"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/B_Album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/B_Cancion"
                    android:layout_centerHorizontal="true"
                    android:text="Album: "
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:background="#FFD700"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/B_Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/B_Album"
                    android:layout_centerHorizontal="true"
                    android:text="Nombre: "
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:background="#FFD700"
                    android:layout_margin="5dp"
                    />
                <Button
                    android:id="@+id/B_Audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/B_Nombre"
                    android:text="Reproducir"
                    android:textSize="13dp"
                    />

                <Button
                    android:id="@+id/B_Favorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/B_Audio"
                    android:layout_below="@+id/B_Nombre"
                    android:textSize="13dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>